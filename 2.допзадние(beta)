def calc(*kordinata):
    z = []
    x = []
    a = []

    for i in range(13):
        if i in range(0, 13, 4):
            x.append('+')
            z.append('|')
        else:
            x.append('-')
            z.append(' ')
    for i in range(7):
        if i % 2 == 0:
            a += x +['\n']
        else:
            a += z +['\n']
    return a

def prov(*kordinata):
    if len(kordinata) == 3:
        if 1 <= int(kordinata[0]) <= 3 and 1 <= int(kordinata[2]) <=3:
            if kordinata[1] == ',':
                return True
            else:
                return False
        else:
            return False
    else:
        return False
print(calc())
print('Привет')
hod = 1
while True:
    if hod%2 == 1:
        kordinata = list(input(f'номер хода {hod}, введите кординаты через запятую:'))
        if prov(*kordinata):
            print('good')
            hod +=1
            break
        else:
            print('неверно ввели(пример: 3,3), повторите заного')
    else:
        kordinata = tuple(input(f'номер хода {hod}, введите кординаты через запятую:'))
        if prov(*kordinata):
            print('good')
            hod +=1
            break
        else:
            print('неверно ввели(пример: 3,3), повторите заного')
print('шаг 1')
