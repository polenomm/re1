def win():
    player1 = []
    player2 = []
    if hod >= 5:
        for i in range(int(len(kordinata)/3)):
            if i%2 == 0:
                player1 += kordinata[3*i:3*i+3]
            else:
                player2 += kordinata[3*i:3*i+3]
    else:
        return True
    if hod % 2 == 1:
        return win1(*player1)
    else:
        return win1(*player2)

def win(*kordinata):
    player1 = []
    player2 = []
    prim = list(kordinata)
    while ',' in prim:
        ind = prim.index(',')
        del prim[ind]
    if hod >= 5:
        for i in range(int(len(prim)/2)):
            if i%2 == 0:
                player1 += prim[2*i:2*i+2]
            else:
                player2 += prim[2*i:2*i+2]
        if hod % 2 == 1:
            return win1(*player1)
        else:
            return win1(*player2)
    else:
        return True

def win1(*hh):
