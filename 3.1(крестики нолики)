def calc(*kordinata):
    z = []
    x = []
    a = []
    kordinata = list(kordinata)

    while True:
        if ',' in kordinata:
            kordinata.remove(',')
        else:
            break

    for i in range(13):
        if i in range(0, 13, 4):
            x.append('+')
            z.append('|')
        else:
            x.append('-')
            z.append(' ')
    for i in range(7):
        if i % 2 == 0:
            a += x +['\n']
        else:
            a += z +['\n']

    for i in range(0, len(kordinata), 2):
        if i in range(0, int(len(kordinata)), 4):
            n = 14*(2*int(kordinata[i])-1)+2+4*(int(kordinata[i+1])-1)
            a[n] = 'x'
        else:
            n = 14 * (2 * int(kordinata[i]) - 1) + 2 + 4 * (int(kordinata[i + 1]) - 1)
            a[n] = 'o'
    return a

def prov(*kordin):
    if len(kordin) == 3:
        if 1 <= int(kordin[0]) <= 3 and 1 <= int(kordin[2]) <=3:
            if kordin[1] == ',':
                return True
            else:
                return False
        else:
            return False
    else:
        return False


